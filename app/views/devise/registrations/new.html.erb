<section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Sign up</h2>
                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                        <%= devise_error_messages! %>
                            <div class="form-group">
                                <i class="zmdi zmdi-account material-icons-name"></i>
                                <%= f.text_field :name, autofocus: true, placeholder: "Your Name" %>
                            </div>
                            <div class="form-group">
                                <i class="zmdi zmdi-account material-icons-age"></i>
                                <%= f.text_field :age, autofocus: true, placeholder: "Your Age" %>
                            </div>
                            <div class="form-group">
                                <i class="zmdi zmdi-email"></i>
                                <%= f.email_field :email, autofocus: true,placeholder: "Your Email" %>
                            </div>
                            <div class="form-group">
                                <i class="zmdi zmdi-lock"></i>
                                <% if @minimum_password_length %>
                                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                                <% end %><br />
                                <%= f.password_field :password, autocomplete: "off" %>
                            </div>
                            <!--<div class="form-group">-->
                            <!--    <i class="zmdi zmdi-lock-outline"></i>-->
                            <!--    <input type="password" name="re_pass" id="re_pass" placeholder="Repeat your password"/>-->
                            <!--</div>-->
                            <div class="form-group">
                                <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                                <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                            </div>
                            <div class="form-group form-button">
                                <%= f.submit "Register", class: "form-submit" %>
                            </div>
                       <% end %>
                    </div>
                    <div class="signup-image">
                        <figure><%= image_tag("signup-image.jpg", alt: "sing up image") %></figure>
                        <%= link_to new_user_session_path, class: "signup-image-link" do %>
                    		I am already member
                    	<% end %>
                    </div>
                </div>
            </div>
        </section>