  <!-- Sing in  Form -->
  <section class="sign-in">
    <div class="container">
      <div class="signin-content">
        <div class="signin-image">
          <figure><%= image_tag("signin-image.jpg", alt: "sing up image") %></figure>
          <%= link_to new_user_registration_path, class: "signup-image-link" do %>サインアップ <br><br>
          <% end %>
          <%= link_to "#", class: "signup-image-link" do %>パスワードをお忘れですか？
          <% end %>
        </div>
        <div class="signin-form">
          <h2 class="form-title">サインイン</h2>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-group">
                <i class="zmdi zmdi-account material-icons-name"></i>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
              </div>
              <div class="form-group">
                <i class="zmdi zmdi-lock"></i>
                <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード" %>
              </div>
              <div class="form-group">
                <input type="checkbox" name="remember-me" id="remember-me" class="agree-term" />
                <label for="remember-me" class="label-agree-term"><span><span></span></span>Remember me</label>
              </div>
              <div class="form-group form-button">
                <%= f.submit "ログイン", class: "form-submit" %>
              </div>
            <% end %>
            <div class="social-login">
                <ul class="socials">
                  <li><a href="#"><i class="display-flex-center zmdi zmdi-facebook"></i></a></li>
                  <li><a href="#"><i class="display-flex-center zmdi zmdi-twitter"></i></a></li>
                  <li><%= link_to user_google_oauth2_omniauth_authorize_path do %>
		                <i class="display-flex-center zmdi zmdi-google"></i>
	                <% end %></li>
                </ul>
                <span class="social-label">でログイン</span>
            </div>
        </div>
      </div>
    </div>
  </section>
        